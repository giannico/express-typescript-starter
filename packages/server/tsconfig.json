{
  "compilerOptions": {
      "module": "commonjs",
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "target": "es6",
      "noImplicitAny": true,
      "strictNullChecks": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
        "@app/*": [
          "./*"
        ]
      }
  },
  "include": [
    "src/**/*"
  ]
}